{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to local Process",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229
        },
        {
            "name": "Attach to Remote Backend",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "hamaney-biteswipe.westus2.cloudapp.azure.com",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app/backend",
            "preLaunchTask": "SSHTunnel",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "name": "Unmocked Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
                "--coverage"
                ,
                "--collectCoverageFrom=src/services/userService.ts",
                "src/__tests__/unmocked/userService.test.ts",
                "--verbose"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "Mocked Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
                "--coverage"
                ,
                "--collectCoverageFrom=src/services/userService.ts",
                "src/__tests__/mocked/userService.test.ts",
                "--verbose"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}