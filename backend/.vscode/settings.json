{
  "coverage-gutters.lcovname": "lcov.info",
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.showGutterCoverage": true,
  "coverage-gutters.highlightdark": "rgba(45, 121, 10, 0.5)",
  "coverage-gutters.noHighlightDark": "rgba(121, 31, 10, 0.5)",
  "coverage-gutters.partialHighlightDark": "rgba(121, 86, 10, 0.5)",
  "coverage-gutters.lcovInfoFilePathRelative": "./coverage/lcov.info",

  // TypeScript common settings
  "editor.defaultFormatter": "vscode.typescript-language-features",
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "typescript.format.semicolons": "insert",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterCommaDelimiter": true,
  "typescript.format.insertSpaceAfterSemicolonInForStatements": true,
  "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true
}
