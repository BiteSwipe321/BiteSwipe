<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="409dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Restaurant Image -->

        <!-- Restaurant Name -->
        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <!-- Address -->

        <!-- Contact Info -->

        <!-- Price Level (1 to 3) -->

        <!-- RatingBar -->

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_image"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-142dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Restaurant Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_name"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="89dp"
            android:text="123 Main St, City"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/restaurant_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_address"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="53dp"
            android:text="+1 234 567 890"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/restaurant_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_contact"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-61dp"
            android:text="$$$"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/restaurant_rating"
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_below="@id/restaurant_price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="161dp"
            android:layout_marginTop="-21dp"
            android:layout_marginBottom="8dp"
            android:numStars="5"
            android:progressTint="#FFD607"
            android:rating="3"
            android:scaleX='0.7'
            android:scaleY='0.7'
            android:stepSize="0.5" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
